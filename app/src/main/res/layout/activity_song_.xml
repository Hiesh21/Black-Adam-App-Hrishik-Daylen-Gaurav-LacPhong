<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6a621"
    tools:context=".Song_Activity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:text="Songs"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="75sp"
        android:textStyle="bold|italic"
        app:fontFamily="@font/imperfecta"
        app:layout_constraintBottom_toTopOf="@id/song1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <Button
        android:id="@+id/song1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#D6A621"
        android:textSize="25sp"
        app:fontFamily="@font/imperfecta"
        app:layout_constraintBottom_toTopOf="@id/song2"
        app:layout_constraintBottom_toBottomOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/song2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#D6A621"
        android:textSize="25sp"
        app:fontFamily="@font/imperfecta"
        app:layout_constraintBottom_toTopOf="@+id/song3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@+id/song1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/song3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#D6A621"
        android:textSize="25sp"
        app:fontFamily="@font/imperfecta"
        app:layout_constraintBottom_toTopOf="@+id/song2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@+id/song2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

</android.widget.RelativeLayout>